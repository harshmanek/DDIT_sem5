<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#000000">

    <com.example.trafficlight.trafficlightview
        android:id="@+id/trafficLightView"
        android:layout_width="200dp"
        android:layout_height="400dp"
        android:layout_marginBottom="30dp" />

    <Button
        android:id="@+id/redLightButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="red Light" />

    <Button
        android:id="@+id/yellowLightButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="yellow Light" />

    <Button
        android:id="@+id/greenLightButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="green Light" />

</LinearLayout>
